{
  "name": "Devtools",
  "dockerFile": "Dockerfile",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24.12.0"
    }
  },
  "customizations": {
    "devpod": {
      "prebuildRepository": "ghcr.io/andrew-codes/devtools"
    },
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          }
        },
        "workbench.colorTheme": "Dracula Pro"
      },
      "extensions": []
    }
  },
  "remoteUser": "root"
}
